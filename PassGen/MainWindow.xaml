<Window x:Class="PassGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassGen"
        mc:Ignorable="d"
        Title="PassGen 1.0.0" Height="250" Width="400">
    <Grid>
        <Label x:Name="pl" Content="Password length:" Margin="33,28,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Visible" IsEnabled="False" Height="29"/>
        <TextBox Text="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" Width="33" DockPanel.Dock="Right" HorizontalAlignment="Left" IsEnabled="False" VerticalAlignment="Top" Margin="138,62,0,0" />
        <Slider Maximum="25"  TickFrequency="1" IsSnapToTickEnabled="True" x:Name="slValue" Minimum="8" DockPanel.Dock="Left" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="33,62,0,0"/>
        <Button x:Name="commit_btn" Content="Generate Password" HorizontalAlignment="Left" Margin="33,93,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="output_text_block" HorizontalAlignment="Left" Margin="33,130,0,20" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="True" Width="200"/>
    </Grid>
</Window>
